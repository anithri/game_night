    .navbar-header
      %button.navbar-toggle{data: {target: "#thankyou-collapse", toggle: "collapse", type: "button"}}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: '#'}
        %small.text-muted
          &copy; #{Date.today.year} Scott M Parrish
