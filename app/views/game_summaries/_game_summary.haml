.col-xs-12.col-sm-6.col-md-4.col-lg-3.col-xl-3.gameSummaryBlock
  - if current_player.is_a? GuestUser
    = render 'game_summaries/game_summary_guest', game_summary: game_summary
  - elsif current_player.game_library.game_summaries.include? game_summary
    = render 'game_summaries/game_summary_in_library', game_summary: game_summary
  - elsif current_player.wish_list.game_summaries.include? game_summary
    = render 'game_summaries/game_summary_in_wish_list', game_summary: game_summary
  - else
    = render 'game_summaries/game_summary_not_in_library', game_summary: game_summary


